@model ServiceApp.Web.Models.ForgotPassword

@{
    ViewBag.Title = "ForgetPassword";
}


<!-- BEGIN FORGOT PASSWORD FORM -->

<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <div class="portlet light portlet-fit ">
            <div class="portlet-title">
                <div class="caption">
                    <i class=" icon-layers font-green"></i>
                    <span class="caption-subject font-green bold uppercase">Forget Password</span>
                </div>
            </div>
            <div class="portlet-body">

                @if (ViewData.ModelState.IsValid)
                {
                    if (@ViewBag.Message != null)
                    {
                        <div class="alert alert-success">
                            <a class="close" data-dismiss="alert">×</a>
                            @ViewBag.Message
                        </div>
                    }
                }
                @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "forget-form" }))
                {
                    <p> Enter your e-mail address below to reset your password. </p>
                    @Html.AntiForgeryToken();

                    if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger">
                            <a class="close" data-dismiss="alert">×</a>
                            <strong>Validation Errors</strong>
                            @Html.ValidationSummary()
                        </div>
                    }
                    <div class="form-group">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control placeholder-no-fix", autocomplete = "off", placeholder = "Email" })
                    </div>
                    <div class="form-actions">
                        <a href="@Url.Action("Login","Account")" id="back-btn" class="btn btn-default">Back To Login</a>
                        <button type="submit" class="btn green uppercase pull-right">Submit</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<!-- END FORGOT PASSWORD FORM -->
