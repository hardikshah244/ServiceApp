@model IEnumerable<ServiceApp.Domain.Entities.UserRequestResponse>
@{
    ViewBag.Title = "Dashboard";
}

<!-- BEGIN PAGE LEVEL PLUGINS -->
<link href="~/Areas/Assets/global/plugins/datatables/datatables.min.css" rel="stylesheet" type="text/css" />
<link href="~/Areas/Assets/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.css" rel="stylesheet" type="text/css" />
<!-- END PAGE LEVEL PLUGINS -->
<!-- BEGIN PAGE LEVEL PLUGINS -->
@*<script src="../assets/global/scripts/datatable.js" type="text/javascript"></script>*@
<script src="~/Areas/Assets/global/plugins/datatables/datatables.min.js" type="text/javascript"></script>
<script src="~/Areas/Assets/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.js" type="text/javascript"></script>
<!-- END PAGE LEVEL PLUGINS -->
<!-- BEGIN PAGE LEVEL SCRIPTS -->
<script src="~/Areas/Assets/pages/scripts/table-datatables-buttons.js" type="text/javascript"></script>
<!-- END PAGE LEVEL SCRIPTS -->

<div class="portlet light portlet-fit bordered">
    <div class="portlet-title">
        <div class="caption font-green-haze">
            <span class="caption-subject bold uppercase">Customer Dashboard</span>
        </div>
    </div>
    <div class="portlet-body">
        <table class="table table-striped table-bordered table-hover dataTable no-footer dtr-inline" id="dvCustomerServiceRequests" role="grid" aria-describedby="dvCustomerServiceRequests_info">
            <thead>
                <tr>
                    <th>Service RequestNO</th>
                    <th>Name</th>
                    <th>Service Type</th>
                    <th>Landmark</th>
                    <th>Remark</th>
                    <th>Created DateTime</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr role="row">
                        <td>
                            @Html.DisplayFor(modelItem => item.ServiceRequestNO)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ServiceTypeName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Landmark)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Remark)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CreatedDateTime)
                        </td>
                        <td>
                            @if (item.StatusTypeID == 1)
                            {
                                <span class="label label-sm label-success">@Html.DisplayFor(modelItem => item.StatusTypeName)</span>
                            }
                            else if (item.StatusTypeID == 2)
                            {
                                <span class="label label-sm label-danger">@Html.DisplayFor(modelItem => item.StatusTypeName)</span>
                            }
                            else if (item.StatusTypeID == 3)
                            {
                                <span class="label label-sm label-info">@Html.DisplayFor(modelItem => item.StatusTypeName)</span>
                            }
                            else if (item.StatusTypeID == 4)
                            {
                                <span class="label label-sm label-warning">@Html.DisplayFor(modelItem => item.StatusTypeName)</span>
                            }
                            else if (item.StatusTypeID == 5)
                            {
                                <span class="label label-sm label-primary">@Html.DisplayFor(modelItem => item.StatusTypeName)</span>
                            }

                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>

